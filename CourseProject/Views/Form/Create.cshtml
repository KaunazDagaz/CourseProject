@using CourseProject.Entities
@model List<CourseProject.Models.FormWithQuestionsViewModel>
@{
    ViewData["Title"] = "Create Forms";
    var templateId = ViewBag.TemplateId;
}

<div class="container mt-4">
    <h2 class="mb-3">Create Forms with Questions</h2>
    <p class="text-muted">Each form contains a single question. Drag forms to reorder them.</p>
    <form id="formsContainer" method="post" asp-action="Create" asp-route-templateId="@templateId">
        <div id="formsList">
        </div>
        <div class="d-flex justify-content-between mt-4 mb-5">
            <button type="button" id="addFormBtn" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> Add Another Form
            </button>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i> Submit All Forms
            </button>
        </div>
    </form>
</div>
<div id="formTemplate" class="d-none">
    <div class="form-container card mb-4 shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><span class="form-number"></span></h5>
            <button type="button" class="btn btn-sm btn-outline-danger remove-form-btn">
                <i class="bi bi-trash"></i> Remove Form
            </button>
        </div>
        <div class="card-body">
            <input type="hidden" name="[IDX].Position" value="0" />
            <div class="question-container">
                <div class="mb-3">
                    <label class="form-label">Question Title</label>
                    <input type="text" name="[IDX].Question.Title" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea name="[IDX].Question.Description" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Question Type</label>
                    <select name="[IDX].Question.Type" class="form-select" required>
                        <option value="">Select a type</option>
                        <option value="@QuestionType.SingleLine">One-line Text</option>
                        <option value="@QuestionType.MultiLine">Text</option>
                        <option value="@QuestionType.Checkbox">Checkbox</option>
                        <option value="@QuestionType.Integer">Number</option>
                    </select>
                </div>
                <div class="form-check mb-3">
                    <input type="checkbox" name="[IDX].Question.ShowInTable" class="form-check-input" value="true" />
                    <label class="form-check-label">Show in table</label>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="~/js/forms.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}