@model IEnumerable<CourseProject.Models.UserViewModel>

<table class="table table-hover table-bordered text-center align-middle">
    <thead class="bg-dark text-white">
        <tr>
            <th><input type="checkbox" id="selectAll" class="form-check-input" title="Select/deselect all users" /></th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th class="w-25">Status</th>
            <th class="w-25">Created</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><input type="checkbox" class="form-check-input user-checkbox" value="@user.Id" /></td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@(user.IsBlocked ? "Blocked" : "Active")</td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>