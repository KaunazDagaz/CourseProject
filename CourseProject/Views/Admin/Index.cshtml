@model IEnumerable<CourseProject.Models.UserViewModel>
@{
    ViewData["Title"] = "User Management";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">User Management</h2>
    <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 11">
        <div id="messageToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div id="messageBox" class="toast-body"></div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <form id="userForm">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <button class="btn btn-outline-secondary d-lg-none w-100 mb-2" type="button" data-bs-toggle="collapse"
                    data-bs-target="#userActionsCollapse" aria-expanded="false" aria-controls="userActionsCollapse">
                <i class="fas fa-sliders-h me-2"></i>User Actions
            </button>
            <div class="collapse d-lg-block" id="userActionsCollapse">
                <div class="d-flex flex-wrap gap-2">
                    <button type="button" id="unblockBtn" class="btn btn-primary" title="Unblock selected users">
                        <i class="fas fa-unlock"></i>
                    </button>
                    <button type="button" id="blockBtn" class="btn btn-danger" title="Block selected users">
                        <i class="fas fa-lock me-1"></i> Block
                    </button>
                    <button type="button" id="addAdminBtn" class="btn btn-primary" title="Add administrator role to selected users">
                        <i class="fas fa-user-shield me-1"></i> Make Admin
                    </button>
                    <button type="button" id="removeAdminBtn" class="btn btn-secondary" title="Remove administrator role from selected users">
                        <i class="fas fa-user me-1"></i> Remove Admin
                    </button>
                    <button type="button" id="deleteBtn" class="btn btn-danger" title="Delete selected users">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="table-responsive" id="tableContainer">
            @await Html.PartialAsync("_UsersTable", Model)
        </div>
    </form>
</div>
@section Scripts {
    <script src="~/js/checkbox.js" asp-append-version="true"></script>
    <script src="~/js/message.js" asp-append-version="true"></script>
}